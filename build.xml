            <zipfileset src="${basedir}/lib/windows/lwjgl-glfw.jar"/>
            <zipfileset src="${basedir}/lib/windows/lwjgl-natives-windows.jar"/>
            <zipfileset src="${basedir}/lib/windows/lwjgl-openal-natives-windows.jar"/>
