            <zipfileset src="${basedir}/lib/generic/joml-1.9.25.jar"/>
            <zipfileset src="${basedir}/lib/generic/kryonet-2.21-all.jar"/>
            <zipfileset src="${basedir}/lib/windows/lwjgl-assimp-natives-windows.jar"/>
